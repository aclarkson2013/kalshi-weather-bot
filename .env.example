# ─── Database ───
# PostgreSQL connection string (asyncpg driver for async support)
DATABASE_URL=postgresql+asyncpg://boz:boz@localhost:5432/boz_weather_trader

# Redis connection (used for caching and Celery broker)
REDIS_URL=redis://localhost:6379/0

# ─── Encryption ───
# AES encryption key for storing API keys at rest
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=CHANGE_ME_generate_a_real_fernet_key

# ─── App ───
ENVIRONMENT=development
LOG_LEVEL=INFO

# ─── NWS API ───
# Required: Set your email so NWS can contact you if needed
NWS_USER_AGENT=BozWeatherTrader/1.0 (your-email@example.com)
NWS_RATE_LIMIT_PER_SECOND=1.0

# ─── Open-Meteo API ───
OPENMETEO_RATE_LIMIT_PER_SECOND=5.0

# ─── Trading Defaults ───
# These are safe defaults — users can adjust in the Settings page
DEFAULT_MAX_TRADE_SIZE=1.00
DEFAULT_DAILY_LOSS_LIMIT=10.00
DEFAULT_MAX_DAILY_EXPOSURE=25.00
DEFAULT_MIN_EV_THRESHOLD=0.05
DEFAULT_COOLDOWN_MINUTES=60
DEFAULT_CONSECUTIVE_LOSS_LIMIT=3

# ─── Celery (Task Queue) ───
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ─── Push Notifications (VAPID) ───
# Generate with: python -c "from py_vapid import Vapid; v = Vapid(); v.generate_keys(); print('Private:', v.private_pem()); print('Public:', v.public_key)"
# VAPID_PRIVATE_KEY=
# VAPID_EMAIL=your-email@example.com

# ─── Frontend ───
NEXT_PUBLIC_API_URL=http://localhost:8000
# NEXT_PUBLIC_VAPID_PUBLIC_KEY=
